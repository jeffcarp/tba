 <% @posts.each_with_index do |post, i| %>
  <div class="pf badb sidepost clearfix <%= 'current' if @post ? @post.id == post.id : i == 0 %>">

    <% if post.photo_url && !post.photo_url.empty? %>
      <a href="<%= post_path(post) %>"><img src="<%= post.photo_url %>/convert?w=120" 
           style="width:120px;" 
           class="right mdl mdb" /></a>
    <% end %>

    <h3 class="sh mcb"><%= link_to post.title, post %></h3>
    <p>points: <%= post.score %></p>
    <p><a href="/posts/<%= post.id %>/upvote">upvote</a></p>
    <p><a href="/posts/<%= post.id %>/downvote">downvote</a></p>

    <div class="fwb mdb"><%= post.public_user_name.upcase  %></div>

    <div>
      <%= link_to simple_format(auto_link(truncate(post.content, length: 140))), post %>
    </div>

  </div>
<% end %>
