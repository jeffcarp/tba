<% @posts.each_with_index do |post, i| %>
  <% current = 'current' if @post ? @post.id == post.id : i == 0 %>
  <div 
      <% if post.photo_url && !post.photo_url.empty? %>
        style="background: url('<%= post.photo_url %>/convert?w=420');"
        class="pf sidepost white clearfix <%= current  %>"
      <% else %>
        class="pf sidepost clearfix <%= current  %>"
      <% end %>
    >
    <a href="/posts/<%= post.id.to_s %>">


      <h3 class="sh mcb"><%= post.title %></h3>

      <div class="fwb mdb"><%= post.public_user_name.upcase  %></div>

      <div class="">
        <%= simple_format(auto_link(truncate(post.content, length: 140)))%>
      </div>

    </a>
  </div>
<% end %>
