<div class="user_show">

  <p id="notice"><%= notice %></p>

  <h1><%= @user.name %></h1>

  <div class="inset">
    <span>Email <strong><%= @user.accounts.first.email %></strong></span>
  </div>

  <% @posts.each do |post| %>
    <div class="post">
      <h2>
        <%= post.title %>
      </h2>
      <div class="post_info">
        <span><%= post.issue.publish_date.strftime('%B %-d, %Y') %></span>
        <span style="color:#666;"><strong><%= post.votes.count %><span style="font-size:11px;">&#9829;</span></strong></span>
      </div>

      <% if post.photo_url && !post.photo_url.empty? %>
        <img src="<%= post.photo_url %>/convert?w=580" style="width:100%;" />
      <% end %>

      <div><%= simple_format(auto_link(post.content)) %></div>
    </div>
  <% end %>

</div>