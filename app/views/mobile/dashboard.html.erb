<div class="mobile_index">

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>


  <h1>This morning's edition</h1>
  <h2><%= @issue.publish_date.strftime('%B %-d, %Y') %></h2>

<!--
- posts
- likes
- first time posters
 -->

  <div class="announcements">
    <% @posts.each do |post| %>
      <div class="announcement">

        <div class="title" id="<%= post.id %>">
            <% if post.anon %>
              <div class="name"><strong>Anonymous</strong></div>
            <% else %>
              <div class="name"><strong><%= post.user.name %></strong></div>
            <% end %>
          <div class="headline"><%= post.title %></div>
        </div>

        <div class="body">

          <% if post.photo_url && !post.photo_url.empty? %>
            <img src="<%= post.photo_url %>/convert?w=600" style="width:100%;margin:0 0 12px;" />
          <% end %>

          <%= simple_format(post.content) %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<footer>
  <p>Shake to reload</p>
  <p><a href="mailto:hi@colby.io">Send Feedback</a></p>
</footer>
