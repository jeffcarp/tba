<div class="home_dashboard">

  <h1>Posts scheduled for tomorrow</h1>

  <div class="announcements">
    <% @posts.each do |post| %>
      <div class="announcement">

        <table class="title" id="<%= post.id %>">
          <tr>
            <% if post.anon %>
              <td>Anonymous</td>
            <% else %>
              <td><%= post.user.name %></td>
            <% end %>
            <td class="headline"><%= post.title %></td>

          </tr>

        </table>

        <div class="body">

          <% if post.photo_url && !post.photo_url.empty? %>
            <img src="<%= post.photo_url %>/convert?w=580" style="width:100%;" />
          <% end %>

          <%= simple_format(auto_link(post.content)) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
