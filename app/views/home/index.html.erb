<% if !current_user %>
  <div class="mub tac">

    <p>Anyone can sign up for free. Those with @colby.edu addresses can post.</p>

    <div class="google_button">
      <a href="/auth/google_oauth2/" class="google_login">
        Login with Google
      </a>
    </div>
  </div>
<% end %>

<div style="padding-bottom:10em;">
  <% @posts.each do |p| %>
    <div style="float:left; width:49%;">
      <h2><%= p.title %></h2>
      <div>
        <%= p.content %>
      </div>
    </div>
  <% end %>
</div>
