<div class="home_dashboard">

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>


  <h1>This morning's edition</h1>
  <div class="announcements">
    <% @posts.each do |post| %>
      <div class="announcement">
        <div class="title">
          <span><a href="mailto:<%= post.user.primary_email %>"><%= post.user.name %></a> - <%= post.title %></span>
          <% if current_user.canpost %>
            <span class="voting" data-post="<%= post.id %>">

              <% user_vote = current_user.has_voted_on post %>

              <% if post.user == current_user  %>
                <% # you can't vote on your own stuff %>
              <% elsif user_vote %>
                <% if user_vote.up %>
                  <span class="upvoted">liked</span>
                <% else %>
                  <span class="upvoted hidden">liked</span>
                <% end %>

                <span class="upvote hidden">like</span>

              <% else %>

                <span class="upvoted hidden">liked</span>
                <span class="upvote">like</span>

              <% end %>
            </span>
          <% end %>
        </div>
        <div class="body">
          <%= simple_format(auto_link(post.content)) %>
        </div>
      </div>
    <% end %>
  </div>
</div>