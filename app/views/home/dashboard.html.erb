<table>
  <tr>
    <td style="width:400px;">

      <div class="pk badr">
        <h2 class="fwn sj grey mcb">Home</h2>

          <% @posts.each_with_index do |post, i| %>
            <div class="pfy sidepost <%= 'current' if i == 0 %>">
              <a href="/posts/<%= post.id.to_s %>">

                <% if post.photo_url && !post.photo_url.empty? %>
                    <img src="<%= post.photo_url %>/convert?w=120" 
                         style="width:120px;"
                         class="right" />
                <% end %>

                <h3 class="sh mcb"><%= post.title %></h3>
                <div class="fwb mdb"><%= post.public_user_name.upcase  %></div>

                <div class="">
                  <%= simple_format(auto_link(post.content)) %>
                </div>

              </a>
            </div>
          <% end %>
      </div>

    </td>
    <td>

      <div class="pkx badr dib" style="width:400px;">
          
          <h1><%= @posts.first.title %></h1>

      </div>

    </td>
  </tr>
</table>
